#=== OPTIONS ===#
#Options -Indexes
#Options +FollowSymLinks -MultiViews

#=== REWRITE ENGINE ===#
RewriteEngine on

#=== CREATE ROOT VARIABLE FOR RELATIVE FILE PATHS ===#
RewriteCond %{REQUEST_URI}::$1 ^(.*?/)(.*)::\2$
RewriteRule ^(.*)$ - [E=ROOT:%1]

#=== FILE RESTRICTIONS ===#
RewriteCond %{REQUEST_FILENAME} !index\.php$ [NC] #Check if request is not index.php
RewriteRule ^(content/pages|system|theme).*\.php(/?.*)$ $^ [NC] #Deny access to all PHP files in critical directories
#RewriteRule ^.*\..*/.*$ $^ [NC] #Prevent full stops in directory names

#=== SEND REQUEST TO INDEX.PHP ===#
RewriteCond %{REQUEST_FILENAME} !-f [NC] #Check if request is not a filename
RewriteRule .* %{ENV:ROOT}index.php [QSA,L]

#=== BROWSER CACHING ===#
<IfModule mod_expires.c>
ExpiresActive On
ExpiresByType image/jpg "access 1 year"
ExpiresByType image/jpeg "access 1 year"
ExpiresByType image/gif "access 1 year"
ExpiresByType image/png "access 1 year"
ExpiresByType text/css "access 1 month"
ExpiresByType text/html "access 1 month"
ExpiresByType application/pdf "access 1 month"
ExpiresByType text/x-javascript "access 1 month"
ExpiresByType application/x-shockwave-flash "access 1 month"
ExpiresByType image/x-icon "access 1 year"
ExpiresDefault "access 1 month"
</IfModule>

#=== DEFLATE ===#
<IfModule mod_deflate.c>
AddOutputFilterByType DEFLATE text/plain
AddOutputFilterByType DEFLATE text/html
AddOutputFilterByType DEFLATE text/xml
AddOutputFilterByType DEFLATE text/css
AddOutputFilterByType DEFLATE text/javascript
AddOutputFilterByType DEFLATE application/xml
AddOutputFilterByType DEFLATE application/xhtml+xml
AddOutputFilterByType DEFLATE application/rss+xml
AddOutputFilterByType DEFLATE application/atom_xml
AddOutputFilterByType DEFLATE application/javascript
AddOutputFilterByType DEFLATE application/x-javascript
AddOutputFilterByType DEFLATE application/x-shockwave-flash
AddOutputFilterByType DEFLATE image/svg
AddOutputFilterByType DEFLATE image/png
AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

#=== CUSTOM RULES ===#
